<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:padding="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="16dp">

        <!-- Header Section with Recipe Info -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Icon/Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/foodImage"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:contentDescription="Recipe Icon"
                android:src="@drawable/plhd_recipeinfo" />

            <!-- Recipe Title -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Tnolang Manok"
                android:textColor="@color/text_black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dropdown"
            style="@style/RoundedTextInputLayoutAutoComplete"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Breakfast"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerLayout">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardNutrientsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dropdown"
            app:strokeColor="@android:color/transparent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp">

                <FrameLayout
                    android:id="@+id/frameLayoutCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/frameLayoutProteins"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/circularProgressIndicatorCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progress="69"
                        app:indicatorColor="@color/green_700"
                        app:indicatorSize="48dp"
                        app:trackThickness="4dp" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_shape"
                        android:backgroundTint="@color/green_200" />

                    <TextView
                        android:id="@+id/centerTextCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="7.0g"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/caloriesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/frameLayoutCalories"
                    app:layout_constraintStart_toStartOf="@+id/frameLayoutCalories"
                    app:layout_constraintTop_toBottomOf="@+id/frameLayoutCalories" />

                <FrameLayout
                    android:id="@+id/frameLayoutCarbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toStartOf="@id/frameLayoutProteins"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/frameLayoutCalories"
                    app:layout_constraintVertical_bias="0.5">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/circularProgressIndicatorCarbs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:progress="69"
                        app:indicatorColor="@color/blue_700"
                        app:indicatorSize="48dp"
                        app:trackThickness="4dp" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_shape"
                        android:backgroundTint="@color/blue_500" />

                    <TextView
                        android:id="@+id/centerTextCarbs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="7.0g"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/carbsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Carbs"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/frameLayoutCarbs"
                    app:layout_constraintStart_toStartOf="@id/frameLayoutCarbs"
                    app:layout_constraintTop_toBottomOf="@id/frameLayoutCarbs" />

                <FrameLayout
                    android:id="@+id/frameLayoutProteins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toStartOf="@id/frameLayoutYellow"
                    app:layout_constraintStart_toEndOf="@id/frameLayoutCarbs"
                    app:layout_constraintTop_toBottomOf="@id/frameLayoutCalories"
                    app:layout_constraintVertical_bias="0.5">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/circularProgressIndicatorProteins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progress="100"
                        app:indicatorColor="@color/pink_700"
                        app:indicatorSize="48dp"
                        app:trackThickness="4dp" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_shape"
                        android:backgroundTint="@color/pink_500" />

                    <TextView
                        android:id="@+id/centerTextProteins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="6.5g"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/proteinsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Proteins"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/frameLayoutProteins"
                    app:layout_constraintStart_toStartOf="@id/frameLayoutProteins"
                    app:layout_constraintTop_toBottomOf="@id/frameLayoutProteins" />

                <FrameLayout
                    android:id="@+id/frameLayoutYellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/frameLayoutProteins"
                    app:layout_constraintTop_toBottomOf="@id/frameLayoutCalories"
                    app:layout_constraintVertical_bias="0.5">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/circularProgressIndicatorYellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progress="80"
                        app:indicatorColor="@color/yellow_700"
                        app:indicatorSize="48dp"
                        app:trackThickness="4dp" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_shape"
                        android:backgroundTint="@color/yellow_500" />

                    <TextView
                        android:id="@+id/centerTextYellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="8.0g"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </FrameLayout>

                <TextView
                    android:id="@+id/yellowTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Fats"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/frameLayoutYellow"
                    app:layout_constraintStart_toStartOf="@id/frameLayoutYellow"
                    app:layout_constraintTop_toBottomOf="@id/frameLayoutYellow" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/detectedVolumeCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardNutrientsView">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/detectedVolume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detected Volume:"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/detectedVolumeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.52 cups"
                    android:textColor="@color/text_black"
                    android:textSize="14sp" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/maximumMealPortionCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginTop="78dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardNutrientsView">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/maximumMealPortion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maximum meal portion:"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/maximumMealPortionValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.52 cups"
                    android:textColor="@color/text_black"
                    android:textSize="14sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/recommendationCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/maximumMealPortionCard">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/recommendation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recommendation:"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/recommendationValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You can eat the full portion of 0.62 cups for breakfast."
                    android:textColor="@color/text_black"
                    android:textSize="14sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Nutrition Facts Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/nutritionFactsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recommendationCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Nutrition Facts Title -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/nutritionFactsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:padding="4dp"
                    android:text="Nutrition Facts"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Horizontal divider -->
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/gray_200"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/nutritionFactsTitle" />

                <!-- Calories Label and Value -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/caloriesLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Calories"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/nutritionFactsTitle" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/caloriesValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/caloriesLabel" />

                <!-- Other nutrition facts sections here... -->
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/gray_200"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/caloriesLabel" />


                <!-- Carbohydrates Label -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/carbsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Carbohydrates"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/caloriesLabel" />

                <!-- Carbohydrates Value -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/carbsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.5g"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/carbsLabel" />

                <!-- Fibers Label -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fibersLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Fibers"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/carbsLabel" />

                <!-- Fibers Value -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fibersValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.3g"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/fibersLabel" />

                <!-- Sugars Label -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/sugarsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Sugars"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fibersLabel" />

                <!-- Sugars Value -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/sugarsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0g"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/sugarsLabel" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@color/gray_200"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sugarsLabel" />


                <!-- Proteins Label -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/proteinsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Proteins"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sugarsLabel" />

                <!-- Proteins Value -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/proteinsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21.3g"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/proteinsLabel" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@color/gray_200"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/proteinsLabel" />

                <!-- Fats Label -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fatsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Fats"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/proteinsLabel" />

                <!-- Fats Value -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fatsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.5g"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/fatsLabel" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/saturatedFatsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Saturated fatty acids"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fatsLabel" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/saturatedFatsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.3g"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/saturatedFatsLabel" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/monounsaturatedFatsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Monounsaturated fatty acid"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/saturatedFatsLabel" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/monounsaturatedFatsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.3g"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/monounsaturatedFatsLabel" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="@color/gray_200"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/monounsaturatedFatsLabel" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/VitaminsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Vitamins"
                    android:textColor="@color/text_black"
